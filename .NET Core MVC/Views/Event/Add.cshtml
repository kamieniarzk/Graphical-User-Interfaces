@model Calendar.ViewModels.EventViewModel
@{
    ViewData["Title"] = "Add";
}


    <form action="/Event/Add/" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Description</label>
            <input class="form-control" name="description" type="text" placeholder="Description">
        </div>
        <div class="md-form md-outline">
            <label for="default-picker">Time</label>
            <input type="time" id="default-picker" class="form-control" name="time" placeholder="Select time">
        </div>
        <br />
        <div class="text-center">
            <button type="submit" style="width: 10%;" class="btn btn-primary badge-pill">Submit</button>
            <a href="/Home/Day/?date=@ViewBag.date.ToString("yyyy-MM-dd")" style="width: 10%;" class="btn btn-danger badge-pill ">Cancel</a>
        </div>
    </form>
